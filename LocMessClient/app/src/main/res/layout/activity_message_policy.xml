<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_policy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ulisboa.tecnico.cmu.tg14.locmessclient.MessagePolicyActivity">

    <TextView
        android:text="@string/white_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/whiteList_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="129dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/black_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blackList_textView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/message_profile_black_list"
        app:layout_constraintTop_toTopOf="@+id/message_profile_black_list" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/message_profile_key"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/profile_key_text"
        app:layout_constraintRight_toLeftOf="@+id/message_profile_value"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="18dp"
        android:imeOptions="actionDone" />

    <EditText
        android:layout_width="186dp"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/message_profile_value"
        android:hint="@string/profile_value_text"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/message_profile_key"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message_profile_key"
        android:imeOptions="actionDone" />

    <Button
        android:text="@string/button_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_profile_button_finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <ListView
        android:layout_width="48dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="@+id/message_profile_value"
        android:id="@+id/message_profile_white_list"
        android:layout_marginTop="25dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/whiteList_text"
        android:layout_marginBottom="25dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/blackList_textView" />

    <ListView
        android:layout_width="343dp"
        app:layout_constraintRight_toRightOf="@+id/message_profile_white_list"
        app:layout_constraintLeft_toLeftOf="@+id/message_profile_white_list"
        app:layout_constraintBottom_toTopOf="@+id/message_profile_button_finish"
        android:layout_height="152dp"
        android:id="@+id/message_profile_black_list"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintHorizontal_bias="0.22" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_profile_toggle"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/message_profile_value"
        app:layout_constraintBottom_toTopOf="@+id/whiteList_text"
        android:layout_marginBottom="24dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="80dp"
        app:layout_constraintVertical_bias="0.58000004" />

    <TextView
        android:text="@string/white_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_profile_toggle_white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/message_profile_toggle"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/message_profile_toggle" />

    <TextView
        android:text="@string/black_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_profile_toggle_black"
        app:layout_constraintBaseline_toBaselineOf="@+id/message_profile_toggle"
        app:layout_constraintLeft_toRightOf="@+id/message_profile_toggle"
        android:layout_marginLeft="8dp" />

    <Button
        android:text="@string/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_profile_button_add"
        app:layout_constraintBottom_toBottomOf="@+id/message_profile_toggle_black"
        app:layout_constraintTop_toTopOf="@+id/message_profile_toggle_black"
        app:layout_constraintLeft_toRightOf="@+id/message_profile_toggle_black"
        android:layout_marginLeft="40dp" />

</android.support.constraint.ConstraintLayout>
