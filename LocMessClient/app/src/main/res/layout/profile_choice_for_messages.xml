<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/profile_choice_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"

        android:focusableInTouchMode="false"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteX="6dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"></CheckBox>

    <TextView
        android:id="@+id/profile_choice_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@+id/label"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintRight_toLeftOf="@+id/radioProfileGroup"
        app:layout_constraintLeft_toRightOf="@+id/profile_choice_checkbox"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/radioProfileGroup"
        android:layout_marginTop="8dp"></TextView>

    <RadioGroup
        android:id="@+id/radioProfileGroup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <RadioButton
            android:id="@+id/radio_blacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radio_whitelist"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip" />

    </RadioGroup>

</android.support.constraint.ConstraintLayout>